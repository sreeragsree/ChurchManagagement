<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="20sp"
                android:id="@+id/tvMeetingTitle"
                android:text="NEW APPOINTMENT"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="10dp"
                android:fontFamily="@font/proximanovaregular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivIcon"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_verified_24"
                    android:layout_width="50dp"
                    android:visibility="gone"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/ivIconnt"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_verified_24_red"
                    android:layout_width="50dp"
                    android:visibility="gone"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text=""
                    android:id="@+id/tv_ApoName"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:fontFamily="@font/proximanovaregular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_ApoTime"
                    android:textSize="17sp"
                    android:fontFamily="@font/proximanovaregular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_ApoDate"
                    android:textSize="17sp"
                    android:fontFamily="@font/proximanovaregular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView

                    android:id="@+id/tv_ApoReason"
                    android:textSize="17sp"
                    android:fontFamily="@font/proximanovaregular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/llDetailView"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Reg No : "
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="end"
                    android:text="Reg No"
                    android:id="@+id/tvRegNo"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Driver Phone : "
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="end"
                    android:text="Reg No"
                    android:id="@+id/tvDriverPhoneNo"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Route From : "
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="end"
                    android:text="Reg No"
                    android:id="@+id/tvRouteFrom"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>



            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

</LinearLayout>